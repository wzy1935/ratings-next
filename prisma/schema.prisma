generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Likes {
  id Int @id @default(autoincrement())
  ratingId Int
  userId String
}

model Rating {
  id Int @id @default(autoincrement())
  score Int
  likes Int
  comments String

  board Board @relation(fields: [boardId], references: [id])
  boardId Int
  createdBy String
  createdAt DateTime
}

model Board {
  id Int @id @default(autoincrement())
  imageUrl String?
  name String
  description String

  createdBy String
  createdAt DateTime
  ratings Rating[]
}

model Admin {
  id Int @id @default(autoincrement())
  userId String @unique
}
