generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Likes {
  id       Int    @id @default(autoincrement())
  ratingId Int
  userId   String
}

model Rating {
  id        Int      @id @default(autoincrement())
  score     Int
  likes     Int
  comments  String
  boardId   Int
  createdBy String
  createdAt DateTime
  board     Board    @relation(fields: [boardId], references: [id])
}

model Board {
  id          Int      @id @default(autoincrement())
  imageId    String?
  createdBy   String
  createdAt   DateTime
  description String
  name        String
  ratings     Rating[]
}

model Admin {
  id     Int    @id @default(autoincrement())
  userId String @unique
}
